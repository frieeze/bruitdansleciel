<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/grey">

        <RelativeLayout
            android:id="@+id/picture_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/song_picture"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/the_evol" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/player_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/picture_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dark_grey_round_corners">

            <RelativeLayout
                android:id="@+id/song_name_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:id="@+id/lecture_layout_songName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coucou" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lecture_layout_songName"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:foregroundGravity="center"
                    android:max="10"
                    android:progress="3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lecture_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@id/song_name_layout">

                <ImageButton
                    android:id="@+id/lectur_layout_playpause_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@color/darkGrey"
                    app:srcCompat="@drawable/play_button" />

                <ImageButton
                    android:id="@+id/lecture_layout_next_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="100dp"
                    android:background="@color/darkGrey"
                    app:srcCompat="@drawable/next_button" />

                <ImageButton
                    android:id="@+id/lecture_layout_random_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:background="@color/darkGrey"
                    app:srcCompat="@drawable/random_button" />

                <ImageButton
                    android:id="@+id/lecture_layout_previous_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:background="@color/darkGrey"
                    app:srcCompat="@drawable/previous_button" />

                <ImageButton
                    android:id="@+id/lecture_layout_loop_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:background="@color/darkGrey"
                    app:srcCompat="@drawable/loop_button" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>